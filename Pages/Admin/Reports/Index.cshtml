@page
@model OfficialProject3.Pages.Reports.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-danger">Danh sách các báo cáo vi phạm (bình luận, tài liệu)</h1>

<table class="table text-white">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].ReportType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].ReportedItem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].ReportedComment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Report) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReportType)
            </td>
            <td>
                <a asp-page="/Files/Details" asp-route-id="@item.ItemId">
                @Html.DisplayFor(modelItem => item.ReportedItem.Id)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReportedComment.Id)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.Id">Chi tiết</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
