@page
@model OfficialProject3.Pages.Reports.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Report</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Report.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Report.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Report.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Report.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Report.ReportType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Report.ReportType)
        </dd>
        <dt class="col-sm-2">
            Người báo cáo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Report.Reporter.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Report.ReportedItem)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Report.ItemId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Report.ReportedComment)
        </dt>
        <dd class="col-sm-10">
            <a asp-page="/Files/Details"
            asp-route-id="@Model.Report.ItemId" asp-route-commentId="@Model.Report.CommentId">
                @Html.DisplayFor(model => model.Report.CommentId)
            </a>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Delete" asp-route-id="@Model.Report?.Id">Xóa</a> |
    <a asp-page="./Index">Trở về danh sách</a>
</div>
